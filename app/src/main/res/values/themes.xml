<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherWear" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 폰트 설정 -->
        <item name="android:fontFamily">@font/notosans_kr_regular</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorAccent">@color/gray_500</item>

        <!-- Toolbar 설정-->
        <item name="toolbarStyle">@style/Widget.WeatherWear.Toolbar</item>
        <item name="toolbarWithArrowStyle">@style/Widget.WeatherWear.Toolbar.WithArrow</item>
        <item name="toolbarWithCloseStyle">@style/Widget.WeatherWear.Toolbar.WithClose</item>

    </style>


</resources>