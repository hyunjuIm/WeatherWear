<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.WeatherWear.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.WeatherWear.Toolbar.WithArrow" parent="Widget.WeatherWear.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.WeatherWear.Toolbar.WithClose" parent="Widget.WeatherWear.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.WeatherWear.BaseInputView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_rounded_white_line_gray</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.WeatherWear.BaseUnableView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_rounded_snow_line_gray</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.WeatherWear.BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_rounded_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WeatherWear.EnableButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_enable_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WeatherWear.CancelButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_rounded_white_line_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WeatherWear.DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Widget.WeatherWear.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Widget.WeatherWear.SpinnerDatePicker" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="Widget.WeatherWear.RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/blue_700</item>
        <item name="colorControlNormal">@color/gray_500</item>
    </style>


</resources>