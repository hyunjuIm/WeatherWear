<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.WeatherWear.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.WeatherWear.Toolbar.WithArrow" parent="Widget.WeatherWear.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.WeatherWear.Toolbar.WithClose" parent="Widget.WeatherWear.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.WeatherWear.BaseInputView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_rounded_white_line_gray</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.WeatherWear.BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/bg_rounded_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WeatherWear.EnableButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_enable_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.WeatherWear.DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="Widget.WeatherWear.SpinnerDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/blue_500</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray_500</item>
    </style>

</resources>